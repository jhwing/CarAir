<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:background="@color/main_list_item_background" >
    <LinearLayout 
        android:id="@+id/param_incar_left"
        android:layout_width="150dp"
    	android:layout_height="fill_parent"
    	android:orientation="vertical"
    	android:layout_alignParentLeft="true"
    	android:paddingLeft="30dp"
    	android:paddingTop="10dp"
    	android:paddingBottom="10dp"
        >
        <TextView
	        android:id="@+id/pm2.5_incar" 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="center_horizontal"
	    	android:layout_marginTop="5dp"
	    	android:text="车内pm2.5"
	    	android:textSize="15sp"
	        />
	    <TextView
	        android:id="@+id/pm2.5_incar_value" 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="center_horizontal"
	    	android:text="-1"
	    	android:textSize="25sp"
	        />
	    <TextView
	        android:id="@+id/pm2.5_incar_value" 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="center_horizontal"
	    	android:text="有毒气体浓度"
	    	android:textSize="17sp"
	        />
	     <TextView
	        android:id="@+id/pm2.5_incar_value" 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="center_horizontal"
	    	android:text="-1"
	    	android:textSize="25sp"
	        />
	      <TextView
	        android:id="@+id/pm2.5_incar_value" 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="center_horizontal"
	    	android:text="2014-04-28 22:05"
	    	android:textSize="15sp"
	        />
    </LinearLayout>

    <LinearLayout 
        android:id="@+id/param_incar_right"
        android:layout_width="150dp"
    	android:layout_height="fill_parent"
    	android:orientation="vertical"
    	android:layout_alignParentRight="true"
		android:paddingTop="10dp"
    	android:paddingBottom="10dp"
        >
        <TextView
	        android:id="@+id/pm2.5_incar" 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="right"
	    	android:layout_marginTop="15dp"
	    	android:text="查询中"
	    	android:textSize="22sp"
	    	android:paddingRight="60dp"
	        />
	    <TextView
	        android:id="@+id/pm2.5_incar_value" 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="right"
	    	android:layout_marginTop="15dp"
	    	android:text="电量:100%"
	    	android:textSize="17sp"
	    	android:paddingRight="60dp"
	        />
	    <TextView
	        android:id="@+id/pm2.5_incar_value" 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="right"
	    	android:layout_marginTop="25dp"
	    	android:text="未连接"
	    	android:textSize="17sp"
	    	android:paddingRight="60dp"
	        />
    </LinearLayout>
</RelativeLayout>